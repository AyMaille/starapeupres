<div class="container">
  <div class="header mt-3 mb-5">
    <h1><%= "#{@star.performer_name}" %></h1>
  </div>
  <div class="d-flex">
    <div><% if @star.photo.present? %>
      <%= cl_image_tag(@star.photo.key, :width => 400, :height => 500,
                      :crop => :thumb, :gravity => :face) %>
      <% end %>
    </div>
    <div class="display-4 pl-4">
      <p><%= "#{@star.category}" %></p>

      <p><%= "#{@star.decription}" %></p>
    </div>
  </div>
</div>

<h3>Book</h3>
<%= simple_form_for [@star, @user, @mission] do |f| %>
  <%= f.input :booking, placeholder: 'Date' , label: "Date" %>
  <%= f.input :name, placeholder: 'Event Name' , label: "Event Name" %>
  <%= f.input :address, placeholder: 'Address' , label: "Address" %>
  <%= f.input :special_request, placeholder: 'Special request' %>
  <%= f.submit "Book Now!", class: 'btn btn-flat' %>
<% end %>
